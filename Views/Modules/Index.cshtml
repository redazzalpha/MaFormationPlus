@model IEnumerable<MaFormaPlusCoreMVC.Models.Module>

@{
    ViewData["Title"] = "Index";
}

<h4>Liste des modules</h4>














<div class="container">
    @foreach (Module module in Model)
    {
        <div class="row">
            <div class="col d-flex flex-grow-0">
                <figure class="item-card d-inline-block m-0 my-3" style="cursor: pointer">
                    <img src=@module.Logo class="item-card-img" />
                    <figcaption style="padding: 10px;">
                        <div class="h6 font-weight-bold">@module.Nom</div>
                        <div class="d-flex align-items-center">
                        </div>
                    </figcaption>
                </figure>
            </div>
            <div class="col">
                <dl class="row " style=" margin-left: 15px;">
                    <dt class="col-sm-2">
                        Nom
                    </dt>
                    <dd class="col-sm-10">
                        @module.Nom
                    </dd>
                    <dt class="col-sm-2">
                        Résumé
                    </dt>
                    <dd class="col-sm-10">
                        @module.Resume
                    </dd>
                    <dt class="col-sm-2">
                        Infos
                    </dt>
                    <dd class="col-sm-10">
                        @module.Info
                    </dd>
                    <dd class="col-sm-10 d-flex ">
                        <a asp-action="Edit" asp-route-id="@module.Id" class="btn btn-outline-primary m-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@module.Id" class="btn btn-outline-secondary m-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@module.Id" class="btn btn-outline-danger m-1">Delete</a>
                    </dd>
                </dl>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="mb-4">
                    <a asp-action="Create" class="btn-style" style="max-width: 200px;">Nouveau module</a>
                    <a asp-controller="Home" asp-action="Index" class="btn-style" style="max-width: 100px;">Accueil</a>
                </div>
            </div>
        </div>
    }
</div>

















