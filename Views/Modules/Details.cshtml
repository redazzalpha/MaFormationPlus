@model MaFormaPlusCoreMVC.Models.Module

@{
    ViewData["Title"] = "Details";
}

<h4>Details module</h4>
<div>
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="my-4">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn-style">Modifier</a>
                    <a asp-controller="Home" asp-action="Index" class="btn-style">Accueil</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col d-flex flex-grow-0 my-3 mb-5">
                <a asp-action="Edit" asp-route-id="@Model?.Id" style="color: black;">
                    <figure class="item-card d-inline-block m-0">
                        <img src=@Model?.Logo class="item-card-img" />
                        <figcaption style="padding: 10px;">
                            <div class="h6 font-weight-bold">@Model?.Nom</div>
                            <div class="d-flex align-items-center">
                            </div>
                        </figcaption>
                    </figure>
                </a>
            </div>
            <div class="col my-3">
                <dl class="row " style=" margin-left: 15px;">
                    <dt class="col-sm-2">
                        Nom
                    </dt>
                    <dd class="col-sm-10">
                        @Model?.Nom
                    </dd>
                    <dt class="col-sm-2">
                        Résumé
                    </dt>
                    <dd class="col-sm-10">
                        @Model?.Resume
                    </dd>
                    <dt class="col-sm-2">
                        Info
                    </dt>
                    <dd class="col-sm-10">
                        @Model?.Info
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>