@{
    ViewData["Title"] = "Home Page";
    <link async rel="stylesheet" href="~/css/index.css" />
}
@*title*@
<h2 class="text-center pb-5">
    Bienvenue sur <span class="logo-title" style="font-size: 40px"> MaFormationPlus</span>
</h2>
<h4 class="text-center">Prochaines sessions</h4>
@*home slide view*@
<div class="d-flex justify-content-center align-items-center mx-auto slide-block" style="max-width: 1070px;">
    <span class="material-icons chevron left">chevron_left</span>
    <div class="items">
        @{
            string[] tab = {
        "../assets/sessions/session.png",
        "../assets/sessions/session1.png",
        "../assets/sessions/session2.png",
        "../assets/sessions/session3.png",
        "../assets/sessions/session4.png",
        };
            foreach (var item in tab)
            {
                    <figure class="item-card">
                        <img src=@item class="item-card-img" />
                        <figcaption style="padding: 10px;">
                            <div class="h6">Session développeur</div>
                            <div class="d-flex align-items-center">
                                <div class="" style=" font-size: 14px; margin-right: 10px">Du 25/02/2022 <br /> au 15/07/2022</div>
                                <button type="button" class="flex-grow-1 item-card-btn ">S'inscrire</button>
                            </div>
                        </figcaption>
                    </figure>
            }
        }
    </div>
    <span class="material-icons chevron right">chevron_right</span>
</div>

@*carrer list*@
<h4 class="">Toutes les sessions</h4>
<hr />
@*carrer-block*@
<div class="row d-flex justify-content-center my-5 g-0 carrer-block">
    @foreach (var item in tab)
    {
        <div class="col-12 col-md-6 col-lg-4 col-xl-3  d-flex justify-content-center">
            <figure class="item-card" style="cursor: pointer">
                <img src=@item class="item-card-img" />
                <figcaption style="padding: 10px;">
                    <div class="h6 font-weight-bold">Session développeur</div>
                    <div class="d-flex align-items-center">
                        <div class="" style="font-size: 14px; margin-right: 10px"> Du 25/02/2022 au 15/07/2022</div>
                        <button type="button" class="flex-grow-1 item-card-btn">S'inscrire</button>
                    </div>
                </figcaption>
            </figure>
        </div>
    }
</div>

@section Scripts {
    <script defer src="~/js/index.js"></script>
}



