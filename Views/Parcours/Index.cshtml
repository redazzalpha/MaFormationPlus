@model IEnumerable<MaFormaPlusCoreMVC.Models.Parcours>

@{
    ViewData["Title"] = "Index";
}

<h4>Liste des parcours</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Resume)
                </td>
                <td>
                    <img src=@item.Logo width="70" height="70" style="border-radius: 15px; object-fit: cover;" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="d-flex">
    <a asp-action="Create" class="btn-style" style="max-width: 200px;">Nouveau parcours</a>
    <a asp-controller="Home" asp-action="Index" class="btn-style" style="max-width: 100px;">Accueil</a>
</div>

