<!DOCTYPE html>
<html lang="fr-fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MaFormaPlus</title>
    <link async rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link async rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link async rel="stylesheet" href="~/MaFormaPlusCoreMVC.styles.css" asp-append-version="true" />
    <link async href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    @*carousel-top-bar*@
    <div id="carouselExampleSlidesOnly" class="carousel-fade" data-ride="carousel" data-interval="4000">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="col" style="padding: 0px!important;">
                    <img class="d-block" style="object-fit: cover; height:100px; width: 100%;"
                         src="~/assets/backgrounds/top-bg.png"
                         alt="First slide">
                    <div class="d-flex align-items-center justify-content-center w-100 h-100" style="position: absolute; top: 0px; left: 0px;">
                        <img src="~/assets/tags/tag.png" style="width: 80px;" />
                        <p class="text-center text-white">
                            <strong class="text-white text-wrap"> Nouvelle session parcours développeur à découvrir</strong>
                            <br />
                            <span>Incrivez-vous sans plus attendre!</span>
                        </p>
                    </div>
                </div>
            </div>

            <div class="carousel-item">
                <div class="col" style="padding: 0px!important;">
                    <img class="d-block" style="object-fit: cover; height:100px; width: 100%;"
                         src="~/assets/backgrounds/top-bg1.png"
                         alt="First slide">
                    <div class="d-flex align-items-center justify-content-center w-100 h-100" style="position: absolute; top: 0px; left: 0px;">
                        <img src="~/assets/tags/tag1.png" style="width: 80px;" />
                        <p class="text-center text-white">
                            <strong class="text-white text-wrap"> Nouvelle session parcours développeur à découvrir</strong>
                            <br />
                            <span>Incrivez-vous sans plus attendre!</span>
                        </p>
                    </div>
                </div>
            </div>

            <div class="carousel-item">
                <div class="col" style="padding: 0px!important;">
                    <img class="d-block" style="object-fit: cover; height:100px; width: 100%;"
                         src="~/assets/backgrounds/top-bg2.png"
                         alt="First slide">
                    <div class="d-flex align-items-center justify-content-center w-100 h-100" style="position: absolute; top: 0px; left: 0px;">
                        <img src="~/assets/tags/tag2.png" style="width: 80px;" />
                        <p class="text-center text-white">
                            <strong class="text-white text-wrap"> Nouvelle session parcours développeur à découvrir</strong>
                            <br />
                            <span>Incrivez-vous sans plus attendre!</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*header-block*@
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 pa-0">
            <div class="container-fluid">
                <a class="navbar-brand text-white logo-title font-effect-3d" style="font-size: 30px" asp-area="" asp-controller="Home" asp-action="Index">MaFormationPlus</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown show">
                                <a class=" dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="text-decoration: unset; color: white;" >
                                    Menu
                                </a>

                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <a asp-controller="Sessions" asp-action="Create" class="dropdown-item" >Nouvelle session</a>
                                    <a asp-controller="Parcours" asp-action="Create" class="dropdown-item" >Nouveau parcours</a>
                                    <a asp-controller="Modules" asp-action="Create" class="dropdown-item" >Nouveau module</a>
                                    <a asp-controller="Sessions" asp-action="Index" class="dropdown-item" >Liste des sessions</a>
                                    <a asp-controller="Parcours" asp-action="Index" class="dropdown-item" >Listes des parcours</a>
                                    <a asp-controller="Modules" asp-action="Index" class="dropdown-item" >Liste des modules</a>
                                </div>
                            </div>
                        </li>

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    @*render-block*@
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @*footer-block*@
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - MaFormaPlusCoreMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <script>$('#login-modal').modal('show')</script>
    <script>$('#register-modal').modal('show')</script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
